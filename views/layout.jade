doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(name="description" content="Technology first creative studio. Experienced VR, AR, installations and activation developers. We specialise in experimental technology which intersects art.")
    meta(name="keywords" content="VR, AR, virtual reality, oculus, vive, technology, machine learning, installations, activation")
    meta(name="author" content="Unsigned Studio PTY LTD")
    title Unsigned Studio | Melbourne Based | Creative Technology, Data Visualization, VR, AR, Visual Experiences, Activations and Installations
    
    // social media cards
    - var caseStudy = false;
    if (filename.match('[a-zA-Z]*(?=\.jade)')[0] == 'casestudy')
      - caseStudy = true;
    menu(name='description', content='Technology first creative studio. Experienced VR, AR, installations and activation developers. We specialise in experimental technology which intersects art.')
    meta(name='keywords', content='VR, AR, virtual reality, oculus, vive, technology, machine learning, installations, activation')
    meta(name='author', content='Unsigned Studio PTY LTD')
    meta(property='og:title', content='Unsigned')
    meta(property='og:type', content='website')
    meta(property='og:url', content='https://unsignedstudio.io')
    meta(property='og:site_name', content='Unsigned Studio')
    meta(property='og:description', content='Unsigned Studio | Melbourne based | Creative Technology, Data Visualization, VR, AR, Visual Experiences, Activations and Installations')
    
    // meta image
    if (caseStudy)
      if (glob.sync('assets/content/' + item.url + '/meta-image.+(png|jpg)').length > 0)
        - var fullname = glob.sync('assets/content/' + item.url + '/meta-image.+(png|jpg)')[0].match('[^\/]+$')[0];
        meta(itemprop='image', content= 'content/' + item.url + '/' + fullname)
        meta(property='og:image', content= 'content/' + item.url + '/' + fullname)
    else
      if (glob.sync('assets/images/meta-image.+(png|jpg)').length > 0)
        - var fullname = glob.sync('assets/images/meta-image.+(png|jpg)')[0].match('[^\/]+$')[0];
        meta(itemprop='image', content= 'images/' + fullname)
        meta(property='og:image', content= 'images/' + fullname)
    
    meta(property='og:image:width', content='1200')
    meta(property='og:image:height', content='630')
    meta(name='twitter:title', content='Unsigned Studio')
    meta(name='twitter:card', content='summary_large_image')
    meta(name='twitter:site', content='@unsigned_studio')
    
    // twitter image
    if (caseStudy)
      if (glob.sync('assets/content/' + item.url + '/twitter-image.+(png|jpg)').length > 0)
        - var fullname = glob.sync('assets/content/' + item.url + '/twitter-image.+(png|jpg)')[0].match('[^\/]+$')[0];
        meta(itemprop='image', content= 'content/' + item.url + '/' + fullname)
        meta(property='og:image', content= 'content/' + item.url + '/' + fullname)
    else
      if (glob.sync('assets/images/twitter-image.+(png|jpg)').length > 0)
        - var fullname = glob.sync('assets/images/twitter-image.+(png|jpg)')[0].match('[^\/]+$')[0];
        meta(name='twitter:image', content= 'images/' + fullname)
    
    meta(name='twitter:description', content='Unsigned Studio | Melbourne based | Creative Technology, Data Visualization, VR, AR, Visual Experiences, Activations and Installations')
    meta(itemprop='description', content='Unsigned Studio | Melbourne based | Creative Technology, Data Visualization, VR, AR, Visual Experiences, Activations and Installations')
    
    link(href='css/bootstrap.min.css', rel='stylesheet')
    link(href='css/style.css', rel='stylesheet')
    link(href='css/xs.css', rel='stylesheet')
    link(href='css/sm.css', rel='stylesheet')
    link(rel='icon', type='image/png', href='images/favicon.ico')
    // HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries
    // WARNING: Respond.js doesn't work if you view the page via file://
    //if lt IE 9
      script(src='https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js')
      script(src='https://oss.maxcdn.com/respond/1.4.2/respond.min.js')
  body
    nav.navbar.navbar-inverse.navbar-fixed-top
      .container-fluid#nav-container
        // Brand and toggle get grouped for better mobile display
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1', aria-expanded='false')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a#navbar-logo.navbar-brand(href='index.html')
            img(src='images/logo_white.png', alt='Unsigned Studio Logo', width='50')
          a.navbar-brand(href='index.html') Unsigned Studio
        // Collect the nav links, forms, and other content for toggling
        #bs-example-navbar-collapse-1.collapse.navbar-collapse
          ul.nav.navbar-nav.navbar-right
            block links
              li: a(href='projects.html') Projects
              //li: a(href='experiments.html') Experiments
              li: a(href='about.html') About
    .container-fluid
      block content
    // jQuery (necessary for Bootstrap's JavaScript plugins)
    script(src='js/jquery.min.js')
    // Include all compiled plugins (below), or include individual files as needed
    script(src='js/bootstrap.min.js')
    block scripts